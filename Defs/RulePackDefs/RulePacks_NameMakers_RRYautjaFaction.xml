      <rulesFiles>
        <li>AvP_NameYautjaMale->NameBanks/AvPMale</li>
        <li>AvP_NameYautjaMaleA->NameBanks/AvPMaleA</li>
        <li>AvP_NameYautjaMaleB->NameBanks/AvPMaleB</li>
		
        <li>AvP_NameYautjaFemale->NameBanks/AvPFemale</li>
        <li>AvP_NameYautjaFemaleA->NameBanks/AvPFemaleA</li>
        <li>AvP_NameYautjaFemaleB->NameBanks/AvPFemaleB</li>
		
        <li>AvP_NameYautjaUnisexNick->NameBanks/AvPNick</li>
