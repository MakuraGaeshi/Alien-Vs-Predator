  </HediffDef>

<!--============================================= Artificials Damaged inhibitor =============================================-->

	<HediffDef ParentName="DiseaseBase">
		<defName>RRY_Defective_Inhibitor</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>damaged inhibitor</label>
		<labelNoun>trauma</labelNoun>
		
		<comps>
		<li Class="RRYautja.HediffCompProperties_DefectiveInhibitor">
			<traitsToGive>
					<li>Bloodlust</li>
					<li>Pyromaniac</li>
					<li>Jealous</li>
					<li>Psychopath</li>
					<li>Abrasive</li>
					<li>DislikesMen</li>
					<li>DislikesWomen</li>
			</traitsToGive>
			<TraitGainMinIntervalTicks>300</TraitGainMinIntervalTicks>
			<TraitGainMaxIntervalTicks>600</TraitGainMaxIntervalTicks>
        </li>
		</comps>
		<stages>
			<li>
				<opinionOfOthersFactor>0</opinionOfOthersFactor>
				<partIgnoreMissingHP>true</partIgnoreMissingHP> <!-- to avoid penalties from brain injuries, so manipulation is 100%+ -->
				<capMods>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>