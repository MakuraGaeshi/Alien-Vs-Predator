<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ResourceBoxBase" ParentName="ResourceBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<techLevel>Neolithic</techLevel>
		<thingCategories>
			<li>Items</li>
		</thingCategories>
		<tradeTags>
			<li>Artifact</li>
		</tradeTags>
		<statBases>
			<Mass>0.5</Mass>
		</statBases>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>1</stackLimit>
		<useHitPoints>true</useHitPoints>
		<tradeability>Buyable</tradeability>
		<comps>
			<li Class="CompProperties_Usable">
				<useJob>OpenResourceBox</useJob>
				<useLabel>Open box</useLabel>
			</li>
		</comps>
	</ThingDef>
<!-- -->
	<ThingDef ParentName="ResourceBoxBase">
		<defName>ResourceBox</defName>
		<label>box of stuff</label>
		<description>A small box. only one way to find out whats inside</description>
		<graphicData>
			<texPath>Things/Item/Minified/CrateFront</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.8,0.8)</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>120</MarketValue>
			<MaxHitPoints>70</MaxHitPoints>
		</statBases>
		<drawGUIOverlay>false</drawGUIOverlay>
		<comps>
			<li Class="ResourceBoxes.CompProperties_UseEffect_ResourceBox">
			<!--
            <possibleItemsWithWeight>
				<li>(AIPersonaCore, 1)</li>
