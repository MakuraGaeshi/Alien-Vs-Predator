<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 <ThoughtDef>
	<defName>RRY_Thought_ThrillOfTheHunt</defName>
	<durationDays>1</durationDays>
	<stackLimit>3</stackLimit>
	<validWhileDespawned>true</validWhileDespawned>
	<stages>
		<li>
			<label>Thrill of the hunt</label>
			<description>theres nothing Quite like bringing down your prey. It feels amazing.</description>
			<baseMoodEffect>3</baseMoodEffect>
		</li>
	</stages>
 </ThoughtDef>
	
 <ThoughtDef>
    <defName>RRY_Disfigured</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>ThoughtWorker_Disfigured</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>scarred</label>
        <baseOpinionOffset>5</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>RRY_Thought_BloodedM</defName>
    <workerClass>ThoughtWorker_MarkedMood</workerClass>
	<thoughtClass>RRY_Thought_Situational</thoughtClass>
	<!--
    <workerClass>ThoughtWorker_MutliHediff</workerClass>
	-->
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Unblooded</label>
        <description>I need to prove myself by hunting and killing a Worthy foe!</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>unmarked</label>
        <description>I've proven myself by killing a Worthy Foe, all thats left it to mark myself with its blood.</description>
        <baseMoodEffect>0</baseMoodEffect>
      </li>
      <li>
        <label>marked</label>
        <description>I've proven myself by killing a Worthy foe and marked myself with its blood. I feel amazing.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  
  <ThoughtDef>
    <defName>RRY_Facehugged</defName>
    <workerClass>ThoughtWorker_RRY_Facehugger</workerClass>
    <hediff>RRY_FaceHuggerInfection</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>parasite</label>
        <description>I dont kown what happened.....all i remember are nightmares about suffocating.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RRY_Impregnated</defName>
    <workerClass>ThoughtWorker_RRY_Chestburster</workerClass>
    <hediff>RRY_XenomorphImpregnation</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Impregnated</label>
        <description>Its hopeless....theres nothing that can save me......</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

