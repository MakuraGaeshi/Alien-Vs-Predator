  <ThingDef ParentName="RockBase">
    <defName>RRY_Xenomorph_Hive_Wall</defName>
    <label>collapsed rocks</label>
    <description>Collapsed rocks, packed tightly enough to hold up a roof.</description>
    <graphicData>
      <texPath>Things/Buildings/Xenomorph/Linked/XenoResinWall_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
    </statBases>
		<rotatable>true</rotatable>
    <building>
      <isNaturalRock>false</isNaturalRock>
      <claimable>false</claimable>
    </building>
    <comps>
      <li Class="CompProperties_SpawnerFilth">
        <filthDef>RRY_Filth_Slime</filthDef>
        <spawnCountOnSpawn>10</spawnCountOnSpawn>
        <spawnMtbHours>4</spawnMtbHours>
        <spawnRadius>5</spawnRadius>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="BaseFilth">
    <defName>RRY_Filth_Slime</defName>
    <label>xenomorph slime</label>
    <statBases>
      <Beauty>-25</Beauty>
      <Cleanliness>-5</Cleanliness>
    </statBases>
    <graphicData>
      <texPath>Things/Filth/Spatter</texPath>
      <color>(130, 142, 120, 170)</color>
    </graphicData>
    <filth>
      <rainWashes>false</rainWashes>
      <cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
    </filth>
  </ThingDef>

