<!-- ====================== Plasma Blaster ===================== -->
 <ThingDef ParentName="BaseBullet">
	<defName>RRY_Bullet_Plasma</defName>
    <label>Plasma Bolt</label>
    <graphicData>
		<texPath>Things/Projectile/PlamsShotSml</texPath>
		<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
