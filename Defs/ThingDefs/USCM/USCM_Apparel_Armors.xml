	<!-- ========================= USCM - M10 Pattern Ballistic Helmet ========================== -->
	<ThingDef ParentName="RRY_USCM_HeadgearBase">
		<defName>RRY_USCM_M10PAttern</defName>
		<label>M10 Pattern Ballistic Helmet</label>
		<description>The M10 Pattern Ballistic Helmet is a helmet used primarily by the United States Colonial Marine Corps in conjunction with the M3 Pattern Personal Armor. In addition to providing head protection, it features an integrated video camera, infrared sight, transmitter and microphone.</description>
		<graphicData>
		<texPath>Things/Apparel/USCM/Helmets/M10Pattern/ColonialMarineHelmet</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
				<MarketValue>350</MarketValue>
				<WorkToMake>21000</WorkToMake>
				<MaxHitPoints>150</MaxHitPoints>
				<Mass>1.7</Mass>
				<Flammability>0.4</Flammability>
				<ArmorRating_Sharp>0.85</ArmorRating_Sharp>
				<ArmorRating_Blunt>0.42</ArmorRating_Blunt>
				<ArmorRating_Heat>0.9</ArmorRating_Heat>
				<Insulation_Cold>5</Insulation_Cold>
				<Insulation_Heat>2</Insulation_Heat>
				<EquipDelay>2.5</EquipDelay>
			
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<Plasteel>10</Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<recipeMaker>
			<researchPrerequisite>RRY_USCM_CarapaceArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/USCM/Helmets/M10Pattern/ColonialMarineHelmet</wornGraphicPath>
			<hatRenderedFrontOfFace>false</hatRenderedFrontOfFace>			
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>USCM_M10Pattern</li>
				<li>USCM_StandardIssue_Armour</li>
				<li>USCM_Armour</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<thingCategories>
			<li>RRY_Headgear</li>
		</thingCategories>
		<tradeTags>
			<li>Headgear</li>
		</tradeTags>
	</ThingDef>
	
