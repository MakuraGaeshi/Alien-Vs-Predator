    <label>Attempt embyro removal</label>
    <description>Embyro removal</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <jobString>Attempting to remove xenomorph parasite</jobString>
    <workAmount>1500</workAmount>
    <removesHediff>RRY_XenomorphImpregnation</removesHediff>
    <successfullyRemovedHediffMessage>{0} has successfully removed Embyro {1}.</successfullyRemovedHediffMessage>
    <deathOnFailedSurgeryChance>0.750</deathOnFailedSurgeryChance>
    <surgerySuccessChanceFactor>10</surgerySuccessChanceFactor>
    <skillRequirements>
      <Medicine>4</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <disallowedThingDefs>
        <li>MedicineHerbal</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

 </Defs>
 