<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef ParentName="SurgeryFlesh">
    <defName>RRY_FaceHuggerRemoval</defName>
    <label>Attempt Facehugger removal</label>
    <description>Facehugger removal</description>
    <workerClass>RRYautja.Recipe_RemoveHugger</workerClass>
    <jobString>Attempting to remove xenomorph parasite</jobString>
    <workAmount>1500</workAmount>
    <removesHediff>RRY_FaceHuggerInfection</removesHediff>
    <successfullyRemovedHediffMessage>{0} has successfully removed the parasite from {1}'s head.</successfullyRemovedHediffMessage>
    <deathOnFailedSurgeryChance>0.350</deathOnFailedSurgeryChance>
    <surgerySuccessChanceFactor>1</surgerySuccessChanceFactor>
    <skillRequirements>
      <Medicine>10</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <disallowedThingDefs>
        <li>MedicineHerbal</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="SurgeryFlesh">
