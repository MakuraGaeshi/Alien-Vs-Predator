<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="RRY_USCM_ShuttleSkyfallerBase" ParentName="SkyfallerBase" Abstract="True">
    <size>(7,5)</size>
    <graphicData>
      <texPath>Things/Buildings/USCM/Dropship/UD4L</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(9,6)</drawSize>
      <!-- <color>(162,164,149)</color> -->
    </graphicData>
    <skyfaller>
      <movementType>Decelerate</movementType>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
       <shadowSize>(0,0)</shadowSize> 
      <motesPerCell>1</motesPerCell>
    </skyfaller>
  </ThingDef>
  
  <ThingDef ParentName="RRY_USCM_ShuttleSkyfallerBase">
    <defName>RRY_USCM_DropshipUD4LIncoming</defName>
    <label>UD4L (incoming)</label>
    <skyfaller>
      <anticipationSound>Shuttle_Landing</anticipationSound>
      <anticipationSoundTicks>250</anticipationSoundTicks>
      <ticksToImpactRange>200~250</ticksToImpactRange>
      <angleCurve>
        <points>
          <li>(0,-60)</li>
          <li>(1,-90)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(0,30)</li>
          <li>(0.5,5)</li>
          <li>(0.9,-5)</li>
          <li>(0.95,0)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0.95,2.5)</li>
          <li>(1,0)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0.6,0.6)</li>
          <li>(0.95,0.1)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="RRY_USCM_ShuttleSkyfallerBase">
    <defName>RRY_USCM_DropshipUD4LLeaving</defName>
    <label>UD4L (leaving)</label>
    <skyfaller>
      <reversed>true</reversed>
      <anticipationSound>Shuttle_Leaving</anticipationSound>
      <anticipationSoundTicks>-10</anticipationSoundTicks>
      <ticksToImpactRange>-40~-15</ticksToImpactRange>
      <moteSpawnTime>0.05</moteSpawnTime>
      <angleCurve>
        <points>
          <li>(0,90)</li>
          <li>(1,70)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.15,10)</li>
          <li>(0.5,-5)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.08,2)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0,0.2)</li>
          <li>(0.4,0.7)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

</Defs>
