<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <FactionDef Name="RRY_Xenomorph_Faction_Base" Abstract="true">
    <label>Xenomorph hive</label>
    <pawnSingular>Xenomorph</pawnSingular>
    <pawnsPlural>Xenomorphs</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>a Xenomorph hive</fixedName>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(300,  0)</li>
				<li>(700,  1)</li>
				<li>(1400, 2)</li>
				<li>(2800, 3.5)</li>
			</points>
		</raidCommonalityFromPointsCurve>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>true</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <techLevel>Animal</techLevel>
    <earliestRaidDays>45</earliestRaidDays>
    <permanentEnemy>true</permanentEnemy>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(1,1)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- All types-->
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <RRY_Xenomorph_Queen>100</RRY_Xenomorph_Queen>
          <RRY_Xenomorph_Runner>150</RRY_Xenomorph_Runner>
          <RRY_Xenomorph_Drone>100</RRY_Xenomorph_Drone>
          <RRY_Xenomorph_Warrior>100</RRY_Xenomorph_Warrior>
          <RRY_Xenomorph_FaceHugger>50</RRY_Xenomorph_FaceHugger>
        </options>
				<disallowedStrategies>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
					<li>RRY_PowerCut</li>
				</disallowedStrategies>
      </li>
      <li>
        <!-- No Queens-->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <RRY_Xenomorph_Runner>150</RRY_Xenomorph_Runner>
          <RRY_Xenomorph_Drone>100</RRY_Xenomorph_Drone>
          <RRY_Xenomorph_Warrior>100</RRY_Xenomorph_Warrior>
          <RRY_Xenomorph_FaceHugger>50</RRY_Xenomorph_FaceHugger>
        </options>
				<disallowedStrategies>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
					<li>RRY_PowerCut</li>
				</disallowedStrategies>
      </li>
      <li>
        <!-- No Huggers-->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <RRY_Xenomorph_Queen>100</RRY_Xenomorph_Queen>
          <RRY_Xenomorph_Runner>150</RRY_Xenomorph_Runner>
          <RRY_Xenomorph_Drone>100</RRY_Xenomorph_Drone>
          <RRY_Xenomorph_Warrior>100</RRY_Xenomorph_Warrior>
        </options>
				<disallowedStrategies>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
					<li>RRY_PowerCut</li>
				</disallowedStrategies>
      </li>
      <li>
        <!-- No Queens, Huggers-->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <RRY_Xenomorph_Runner>150</RRY_Xenomorph_Runner>
          <RRY_Xenomorph_Drone>100</RRY_Xenomorph_Drone>
          <RRY_Xenomorph_Warrior>100</RRY_Xenomorph_Warrior>
        </options>
				<disallowedStrategies>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
				</disallowedStrategies>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
    <factionIconPath>Ui/Icons/Icon_Xenomorph</factionIconPath>
    <allowedArrivalTemperatureRange>
      <min>-100</min>
      <max>200</max>
    </allowedArrivalTemperatureRange>
  </FactionDef>
  
  <FactionDef ParentName="RRY_Xenomorph_Faction_Base">
    <defName>RRY_Xenomorph</defName>
    <label>Xenomorph hive</label>
  </FactionDef>
  
</Defs>
